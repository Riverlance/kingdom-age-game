// Note: Check commands.lua of modules.client_terminal

DevCheckBox < CheckBox
  anchors.top: prev.outsideBottom
  anchors.left: prev.left
  anchors.right: parent.right
  margin-top: 2

DevLightButton < LightButton
  size: 80 21
  anchors.top: prev.outsideBottom
  anchors.left: parent.left
  margin-top: 4

InfoTitleLabel < Label
  color: darkTeal
  font: sans-8px

InfoLabel < Label
  font: sans-8px
  margin-left: 8
  margin-right: 8





MainWindow
  id: developmentWindow
  &loc: '${KaClientDevDevelopmentWindow}'
  // See also showDebugInfo() and hideDebugInfo()
  size: 350 550
  focusable: false

  DevLightButton
    id: terminalButton
    &loc: '${KaClientDevTerminalButton}'
    &loct: '${KaClientDevTerminalButtonTooltip}'
    anchors.top: parent.top
    margin-top: 0
    @onClick: |
      ClientTerminal.toggle()
      ClientTerminal.popWindow(false)

  DevLightButton
    id: pingButton
    &loc: '${KaClientDevPingButton}'
    &loct: '${KaClientDevPingButtonTooltip}'
    @onClick: |
      if not ClientTerminal.isVisible() then
        ClientTerminal.show()
        ClientTerminal.popWindow(false)
      end
      ping()

  DevLightButton
    id: autoReloadButton
    &loc: '${KaClientDevAutoReloadButton}'
    &loct: '${KaClientDevAutoReloadButtonTooltip}'
    @onClick: |
      g_modules.enableAutoReload()

  DevCheckBox
    id: localCheckBox
    &loc: '${KaClientDevLocalCheckBox}'
    &loct: '${KaClientDevLocalCheckBoxTooltip}'
    anchors.top: parent.top
    anchors.left: terminalButton.outsideRight
    margin-top: 0
    margin-left: 10
    color: #c9bdab

  DevCheckBox
    id: devCheckBox
    &loc: '${KaClientDevDevCheckBox}'
    &loct: '${KaClientDevDevCheckBoxTooltip}'
    color: #c9bdab

  DevCheckBox
    id: drawBoxesCheckBox
    &loc: '${KaClientDevDrawBoxesCheckBox}'
    &loct: '${KaClientDevDrawBoxesCheckBoxTooltip}'
    color: darkGreen

  DevCheckBox
    id: hideMapCheckBox
    &loc: '${KaClientDevHideMapCheckBox}'
    &loct: '${KaClientDevHideMapCheckBoxTooltip}'
    color: darkGray

  DevCheckBox
    id: showDebugInfoCheckBox
    &loc: '${KaClientDevShowDebugInfoCheckBox}'
    &loct: '${KaClientDevShowDebugInfoCheckBoxTooltip}'
    color: darkTeal

  HorizontalSeparator
    id: debugInfoHorizontalSeparator
    anchors.top: prev.outsideBottom
    anchors.left: parent.left
    anchors.right: parent.right
    margin-top: 10

  Label
    id: debugInfoLabel
    &loc: '${KaClientDevDebugInfoLabel}'
    color: #c9bdab
    text-align: center
    anchors.top: prev.outsideBottom
    anchors.left: parent.left
    anchors.right: parent.right
    margin-top: 4

  Panel
    id: debugInfoPanel
    focusable: false
    anchors.top: prev.outsideBottom
    anchors.bottom: parent.bottom
    anchors.left: parent.left
    anchors.right: parent.right
    margin-top: 4
    layout:
      type: verticalBox
    color: #c9bdab
    image-source: /images/ui/_background/window_headless
    image-border: 5
    padding: 9

    InfoTitleLabel
      &loc: '${KaClientDevLabelPrimary}'

    InfoLabel
      id: positionLabel

    InfoLabel
      id: relativePositionLabel

    InfoLabel
      id: sizeLabel

    InfoTitleLabel
      &loc: '${KaClientDevLabelMainWidget}'
      margin-top: 4

    InfoLabel
      id: widgetIdLabel

    InfoLabel
      id: widgetClassNameLabel

    InfoLabel
      id: widgetStyleNameLabel

    InfoLabel
      id: parentWidgetIdLabel
      margin-top: 4

    InfoLabel
      id: parentWidgetClassNameLabel

    InfoLabel
      id: parentWidgetStyleNameLabel

    InfoTitleLabel
      &loc: '${KaClientDevLabelPhantomWidget}'
      margin-top: 4

    InfoLabel
      id: phantomWidgetIdLabel

    InfoLabel
      id: phantomWidgetClassNameLabel

    InfoLabel
      id: phantomWidgetStyleNameLabel

    InfoLabel
      id: phantomParentWidgetIdLabel
      margin-top: 4

    InfoLabel
      id: phantomParentWidgetClassNameLabel

    InfoLabel
      id: phantomParentWidgetStyleNameLabel

    InfoTitleLabel
      &loc: '${KaClientDevLabelFocusedWidget}'
      margin-top: 4

    InfoLabel
      id: focusedWidgetIdLabel

    InfoLabel
      id: focusedWidgetClassNameLabel

    InfoLabel
      id: focusedWidgetStyleNameLabel

    InfoLabel
      id: focusedParentWidgetIdLabel
      margin-top: 4

    InfoLabel
      id: focusedParentWidgetClassNameLabel

    InfoLabel
      id: focusedParentWidgetStyleNameLabel
