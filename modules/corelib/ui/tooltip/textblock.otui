TooltipTextBlock < Panel
  width: 300
  background-color: #111111cc
  border-width: 1
  border-color: #98885e
  phantom: true
  focusable: false

  Label
    id: label
    anchors.top: parent.top
    anchors.left: parent.left
    anchors.right: parent.right
    margin: 8
    text-align: left
    text-vertical-auto-resize: true
    text-wrap: true
    color: #E6DB74
